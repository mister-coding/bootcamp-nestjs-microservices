<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>New order</title>
  </head>
  <body>
    <h1>Halo, {{user.name}}</h1>
    <h2>Terimakasih telah melakukan order #{{order_no}}</h2>
    <h2>Status #{{order_status}}</h2>

    <br />
    <table border="1">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each order_item}}
          <tr>
          <td>{{product.product_name}}</td>
          <td>{{product.price}}</td>
          <td>{{qty}}</td>
          <td>{{amount}}</td>
        </tr>
        {{/each}}
        
      </tbody>
    </table>
    <h2>Payment method #{{payment.payment_method}}</h2>
    <h2>Payment status #{{payment.payment_status}}</h2>
    <br>
    <h2>Shipping</h2>
    <hr>
     <h2>Receive Name : {{shipping.receive_name}}</h2>
     <h2>Receive Email : {{shipping.receive_email}}</h2>
     <h2>Receive Phone : {{shipping.receive_phone}}</h2>
     <h2>Receive Address : {{shipping.receive_address}}</h2>
  </body>
</html>